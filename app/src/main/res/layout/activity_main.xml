            android:layout_height="50dp"
            android:text="Login"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="40dp"
            android:backgroundTint="#9C4EDC"
            android:textAllCaps="false"
            android:textStyle="normal"
            app:cornerRadius="8dp"/>
